#
# misc
#
alias src='source ~/.aliases'
alias dota='vim ~/.aliases'
alias etch='sudo vim /etc/hosts'
alias srb='irb --simple-prompt'
alias -g ulb='/usr/local/bin'
alias path='echo $PATH | tr -s ":" "\n"'
alias fsl="echo '# frozen_string_literal: true' | pbcopy"
alias tools='cat ~/.tool-versions > .tool-versions'

#
# ls
#
alias ls='ls -G'
alias ll='ls -Al'
alias lr='ls -hArtl'

#
# cd
#
alias ..='cd ..'
alias ...='cd ../..'

cl() {
  if [ -n "$1" ]
  then
    cd "$1" && ls
  else
    cd && ls
  fi
}

#
# grep
#
alias grep='grep -i --color --exclude-dir={.bzr,CVS,.git,.hg,.svn}'

#
# pipe
#
alias -g G='| grep'
alias -g S='| tr -s'
alias -g L='| wc -l'

#
# brew
#
alias b='brew'

#
# bundle
#
alias be='bundle exec'

#
# git
#
alias g='git'
alias initrepo='git add . && git commit -m "init repo"'
